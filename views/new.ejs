<% include ./partials/header %>

<style>
	body{
	background:url(https://images.unsplash.com/photo-1455390582262-044cdead277a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=666&q=80);
    background-size: cover;
	background-repeat:no-repeat;
    background-position: center;

}
	#newTop{
		margin-top:40px;
	}
	
</style>

<div class="container" id="newTop">
    <div class="row">
		<div class="container">
          <h1 style="text-align: center">New Blog</h1>
			<hr style="width:30%">
		</div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs" method="POST">
                <div class="form-group">
                	<label>Title</label>
                    <input class="form-control" type="text" name ="blog[title]" placeholder="title" autofocus>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" type="text" name="blog[image]" placeholder="image">
                </div>
                <div class="form-group">
                	<label>Blog Content</label>
                    <textarea class="form-control" name="blog[body]" rows="4" cols="50"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-warning btn-block" type="submit">Post Blog</button>
                </div>
            </form>
            
        </div>
    </div>
</div>

<% include ./partials/footer %>